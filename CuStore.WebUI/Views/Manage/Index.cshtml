@model CuStore.WebUI.ViewModels.ManageViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage account";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
  <h4>Your orders:</h4>
  @Html.Partial("OrdersList", Model.Orders)

  <hr />
  <h4>Loyalty points: @(ViewData["crmPoints"] ?? 0)</h4>

  <hr />

  <h4>Change your account settings</h4>
  <hr />
  <dl class="dl-horizontal">
    <dt>User address:</dt>
    <dd>
      @Html.ActionLink("Edit", "Edit", new { controller = "UserAddress" })
    </dd>
    <dt>Password:</dt>
    <dd>
      [@(Model.HasPassword ? Html.ActionLink("Change your password", "ChangePassword") : Html.ActionLink("Create", "SetPassword"))]
    </dd>
    <dt>External Logins:</dt>
    <dd>
      @Model.Logins.Count [
      @Html.ActionLink("Manage logins", "ManageLogins") ]
    </dd>
  </dl>
</div>
