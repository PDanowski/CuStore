<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    <title>@ViewBag.Title</title>

</head>
<body>
    <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">
                CuStore
            </a>
            <div class="visible-xs">
                @Html.Partial("_LoginPartial")
                @Html.Action("Summary", "Cart")

                @if (User.IsInRole("Admin"))
                {
                    <a href=@Url.Action("Index", "Manage", new { area = "Admin"})
                       class="btn btn-default navbar-btn">
                        <b class="hidden-xs">Administrator panel</b>
                        <span class="glyphicon glyphicon-cog"></span>
                    </a>
                }
            </div>
            <div class="navbar-btn">
                <a class="dropdown-toggle btn btn-default navbar-btn visible-xs" 
                   data-toggle="dropdown" href="#">
                    Categories
                    <span class="glyphicon glyphicon glyphicon-list"></span>
                </a>
                <ul class="dropdown-menu">
                    @Html.Action("Menu", "Nav")
                </ul>
            </div>
        </div>

        <div class="hidden-xs">
            @Html.Partial("_LoginPartial")
            @Html.Action("Summary", "Cart")

            @if (User.IsInRole("Admin"))
            {
                <a href=@Url.Action("Index", "Manage", new { area = "Admin"})
                   class="btn btn-default navbar-btn">
                    <b class="hidden-xs">Administrator panel</b>
                    <span class="glyphicon glyphicon-cog"></span>
                </a>
            }
        </div>

    </div>
    <div class="row_content">
        @RenderBody()
    </div>

    <div class="row_footer">
        <div class="page_footer">
            <span class="text-muted">
                @Html.ActionLink("About", "About", "Home", null, new { @class = "btn navbar-btn" })
                @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "btn navbar-btn" })
            </span>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
