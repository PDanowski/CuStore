<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" initial-scale="1.0" />
    <link href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" rel="stylesheet" />
    <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <script src="http://code.jquery.com/jquery-3.3.1.js"></script>

    <title>@ViewBag.Title</title>
</head>
<body>
    <div data-role="page" id="page">
        <div data-therem="a" data-role="header" data-position="fixed">
            <h3>
                CuStore
            </h3>
            @Html.Partial("_LoginPartial")
            @Html.Action("Summary", "Cart")
            @Html.Action("Menu", "Nav")
        </div>
        <div data-role="content">
            <ul data-role="listview" data-divide-theme="b" data-inset="false">
                @RenderBody()
            </ul>
        </div>
        <div data-role="footer">
            @Html.ActionLink("About", "About", "Home", null, new { @class = "btn navbar-btn" })
            @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "btn navbar-btn" })
        </div>
    </div>
</body>
</html>
