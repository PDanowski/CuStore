@model IEnumerable<CuStore.Domain.Entities.Order>


<table class="table table-striped table-condensed table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>User name</th>
        <th>Date</th>
        <th>Value</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>

    <tbody id="tableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Cart.User.Email</td>
                <td>@item.OrderDate</td>
                <td>@item.GetTotalValue().ToString("C")</td>
                <td>@item.Status</td>
                <td>           
                    @Html.ActionLink("Details", "OrderDetails", "Order", new { orderId = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>

</table>

