@using CuStore.WebUI.HtmlHelpers
@model CuStore.WebUI.Models.PagingInfo

@{
  ViewBag.Title = "Manage Users";
  Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Manage all users</h3>
  </div>
  <div class="panel-body">
    <div class="panel-primary">
      <h4>@TempData["message"]</h4>
      @Html.ActionLink("Create lacking CRM data", "CreateCrmData", null, new {@class = "btn btn-default"})
    </div>
    <table class="table table-striped table-condensed table-bordered">
      <thead>
        <tr>
          <th>User ID</th>
          <th>Username</th>
          <th>Full name</th>
          <th>E-mail</th>
          <th>Birthdate</th>
          <th>CRM status</th>
        </tr>
      </thead>
      <tbody id="tableBodyId">
        @Html.Action("GetUsers", new { pageNumber = Model.CurrentPage })
      </tbody>

      <div class="btn-group pull-right">
        @Html.PageLinks(Model, x => Url.Action("ManageUsers", new { pageNumber = x }))
      </div>

    </table>
  </div>
</div>

