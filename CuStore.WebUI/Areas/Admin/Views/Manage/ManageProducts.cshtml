@model IEnumerable<CuStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Manage products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Manage all products</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity in stock</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Id</td>
                    <td>@Html.ActionLink(item.Name, "EditProduct", new { productId = item.Id })</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.QuanityInStock</td>
                    <td>@item.Category.Name</td>
                    <td>
                        @using (Html.BeginForm("DeleteProduct", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" value="Remove"/>
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new product", "CreateProduct", null, new { @class = "btn btn-default" })
    </div>
</div>

