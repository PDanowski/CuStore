@using CuStore.WebUI.HtmlHelpers
@model CuStore.WebUI.Models.PagingInfo

@*@model IEnumerable<CuStore.Domain.Entities.Product>*@

@{
    ViewBag.Title = "Manage products";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Manage all products</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity in stock</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            </thead>

            <tbody id="tableBodyId">
                @Html.Action("GetProducts", new { pageNumber = Model.CurrentPage })
            </tbody>

            <div class="btn-group pull-right">
                    @Html.PageLinks(Model, x => Url.Action("ManageProducts", new { pageNumber = x }))
            </div>

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add new product", "CreateProduct", null, new { @class = "btn btn-default" })
    </div>
</div>

