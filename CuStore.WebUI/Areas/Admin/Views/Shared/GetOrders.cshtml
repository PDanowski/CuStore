@model IEnumerable<CuStore.Domain.Entities.Order>


@foreach (var item in Model)
{
    <tr>
        <td>@item.Id</td>
        <td>@item.Cart.User.Email</td>
        <td>@item.OrderDate</td>
        <td>@item.GetTotalValue().ToString("C")</td>
        <td>@item.Status</td>
        <td>
            @using (Html.BeginForm("DeleteOrder", "Manage"))
            {
                @Html.Hidden("orderId", item.Id)
                <input type="submit" value="Remove" class="btn btn-default" />
            }
            @Html.ActionLink("Edit", "EditOrder", "Manage", new { orderId = item.Id}, new { @class = "btn btn-default" })
        </td>
    </tr>
}
